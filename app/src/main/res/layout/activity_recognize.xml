<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.microsoft.projectoxford.emotionsample.RecognizeActivity"
    android:background="#59ef0b">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select an image to analyze"
        android:id="@+id/textView"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editTextResult"
        android:layout_weight="0.09"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:id="@+id/selectedImage"
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:background="#E0E0E0"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/selection_tool"
        android:id="@+id/buttonSelectImage"
        android:layout_below="@+id/selectedImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <Button
        android:text="Process Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextResult"
        android:layout_centerHorizontal="true"
        android:id="@+id/processEmotionsButton" />


</RelativeLayout>
